@page "/"
@using Clients
@using Models

<PageTitle>Heavenly Bakes</PageTitle>

@if(products is null)
{
    <p><em>Loading..</em></p>
}
else
{
    
    <table class="table table-striped table-borderd table-hover mt-5">
        <thead class="table-dark">
            <th>Id</th>
            <th>Name</th>
            <th>Published</th>
            <th class="text-end">Price</th>
            <th>Released At</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Published</td>
                    <td class="text-end">@product.Price.ToString("C2")</td>
                    <td>@product.ReleaseAt</td>
                    <td>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@code{
    private ProductsClient client = new();
    private ProductTable[]? products; 

    protected override void OnInitialized()
    {  
        products = client.GetProducts();

    }
}
